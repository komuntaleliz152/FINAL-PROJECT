doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Add Stock
    link(rel='stylesheet', href='/css/addstock.css')
    link(rel='stylesheet' href='/bootstrap-5.0.2-dist/css/bootstrap.css') 
  body
    header.bg-dark.text-light.py-3
      h1.text-center Add New Stock
      nav.text-center
        a(href='/stocklist' class='btn btn-light') Back to Stock List

    main.container.my-4
      form#addStockForm(action='/addstock' method='POST')
        .mb-3
          label(for='produceName' class='form-label') Produce Name
          input(type='text', class='form-control', id='produceName', name='produceName')
          span#error-produceName.error-message
        .mb-3
          label(for='produceType' class='form-label') Type of Produce
          input(type='text', class='form-control', id='produceType', name='produceType')
          span#error-produceType.error-message
        .mb-3
          label(for='tonnage' class='form-label') Tonnage (kg)
          input(type='number', class='form-control', id='tonnage', name='tonnage')
          span#error-tonnage.error-message
        .mb-3
          label(for='cost' class='form-label') Cost
          input(type='number', class='form-control', id='cost', name='cost')
          span#error-cost.error-message
        .mb-3
          label(for='dealerName' class='form-label') Dealer Name
          input(type='text', class='form-control', id='dealerName', name='dealerName')
          span#error-dealerName.error-message
        .mb-3
          label(for='branchName' class='form-label') Branch Name
          input(type='text', class='form-control', id='branchName', name='branchName')
          span#error-branchName.error-message
        .mb-3
          label(for='contact' class='form-label') Contact
          input(type='text', class='form-control', id='contact', name='contact')
          span#error-contact.error-message
        .mb-3
          label(for='sellingPrice' class='form-label') Selling Price
          input(type='number', class='form-control', id='sellingPrice', name='sellingPrice')
          span#error-sellingPrice.error-message
        .mb-3
          label(for='Date' class='form-label')  Date
          input(type='date', class='form-control', id='Date', name='Date')
          span#error-Date.error-message
        .mb-3
          label(for='Time' class='form-label') Time
          input(type='time', class='form-control', id='Time', name='Time')
          span#error-Time.error-message
        button(type='submit', class='btn btn-primary' me-2 style="width: 400px;") Add Stock
         a.btn.btn-secondary(href="/stocklist") Back to Stocklist
    script(src='/js/addstock.js')