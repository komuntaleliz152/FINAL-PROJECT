doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Add Stock
    link(rel='stylesheet', href='/css/addstock.css')

  body
    header.header-bar
      h1.page-title Add New Stock
      button.back-button(type='button', onclick='history.back()') ‚Üê Back
      nav#navbar
        //- Navigation content goes here (if any)

    main.container
      form#addStockForm(action='/addstock', method='POST')
        .mb-3
          label.form-label(for='produceName') Produce Name
          input#produceName.form-control(type='text', name='produceName')
          span#error-produceName.error-message

        .mb-3
          label.form-label(for='produceType') Type of Produce
          input#produceType.form-control(type='text', name='produceType')
          span#error-produceType.error-message

        .mb-3
          label.form-label(for='tonnage') Tonnage (kg)
          input#tonnage.form-control(type='number', name='tonnage')
          span#error-tonnage.error-message

        .mb-3
          label.form-label(for='cost') Cost
          input#cost.form-control(type='number', name='cost')
          span#error-cost.error-message

        .mb-3
          label.form-label(for='dealerName') Dealer Name
          input#dealerName.form-control(type='text', name='dealerName')
          span#error-dealerName.error-message

        .mb-3
          label.form-label(for='branchName') Branch Name
          input#branchName.form-control(type='text', name='branchName')
          span#error-branchName.error-message

        .mb-3
          label.form-label(for='contact') Contact
          input#contact.form-control(type='text', name='contact')
          span#error-contact.error-message

        .mb-3
          label.form-label(for='sellingPrice') Selling Price
          input#sellingPrice.form-control(type='number', name='sellingPrice')
          span#error-sellingPrice.error-message

        .mb-3
          label.form-label(for='Date') Date
          input#Date.form-control(type='date', name='Date')
          span#error-Date.error-message

        .mb-3
          label.form-label(for='Time') Time
          input#Time.form-control(type='time', name='Time')
          span#error-Time.error-message

        button.btn.btn-primary.mt-3(type='submit') Add Stock

    script(src='/js/addstock.js')
    script.
      document.addEventListener('keydown', function (e) {
        if (e.code === 'Space') {
          e.preventDefault();
          const navbar = document.getElementById('navbar');
          if (navbar) {
            navbar.classList.toggle('hidden');
          }
        }
      });
