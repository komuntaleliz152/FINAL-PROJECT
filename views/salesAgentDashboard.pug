doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sales Agent Dashboard
  link(rel='preconnect' href='https://fonts.googleapis.com')
  link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='css/salesAgentDashboard.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css' integrity='sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==' crossorigin='anonymous' referrerpolicy='no-referrer')

.dashboard
  nav.sidebar
    h2 Dashboard
    ul
      li
        a(href='/')
          i.fas.fa-house(style='margin-right: 8px')
          | Home
          br
      li
        a(href='/addCredit')
          i.fas.fa-money-bill-wave(style='margin-right: 8px') 
          | Add Credit
          br
      li
        a(href='/addsale')
          i.fas.fa-dollar-sign(style="margin-right: 5px")
          | Sale 
          br
      li
        a(href='/Logout')
          i.fas.fa-sign-out-alt(style="margin-right: 5px") 
          | Logout
          br

  main.content
    header
      h1 Welcome, Sales Agent Dashboard
      p Track your sales performance and manage orders efficiently 
    
    // Error message display
    .error-message(id='errorMessage' style='display: none;')
      i.fas.fa-exclamation-circle
      span#errorText
      button.close-btn(onclick="document.getElementById('errorMessage').style.display='none'") ×

    // Statistics & Cards (3 per row)
    .statistics(id='statisticsContainer')
      // Loading spinner
      .loader(id='statisticsLoader')
      
      // Row 1
      .stat-box(id='salesToday')
        h3 Sales Today
        p(id='salesTodayValue') —
      .stat-box(id='highSellingProduct')
        h3 High Selling Product
        p(id='productName') —
        p(id='productValue') —
      .stat-box(id='currentProducts')
        h3 Current Products
        p(id='productsList') —

      // Row 2
      .stat-box(id='lowStockItems')
        h3 Low Stock Items
        ul(id='lowStockList')
          li —
            

    .table-container(id='tableContainer')
      h2 Recent Orders
      .loader(id='tableLoader')
      table(id='ordersTable' style='display: none;')
        tr
          th Name
          th Contact
          th Status
          th Value
        tbody(id='ordersTableBody')

script(src='js/salesAgentDashboard.js')
