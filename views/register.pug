doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Register Produce
  link(rel='stylesheet' href='../css/addproducesale.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
.container
  h2 Register Produce
  form#produceForm(action='/registerProduce' method='POST' )
    label(for='produceName') ProduceName:
    input#produceName(type='text' name="producename")
    span#nameError.error
    label(for='type') Type:
    select#Type(name="type")
      option(value='') Select type
      option(value='Grain') Grain
      option(value='Legume') Legume
    span#Type.error
    label(for='quantity') Quantity:
    input#quantity(type='number' name="quantity" min='1')
    span#quantityError.error
    label(for='PricePerUnit') Price per unit ($):
    input#PricePerUnit(type='number' name="PricePerUnit" min='0.01' step='0.01')
    span#PricePerUniError.error
    label(for='supplier') Supplier Name:
    input#supplier(type='text' name="supplierName")
    span#supplierError.error
    label(for='branch') branch:
    select#branch(name="branchName")
      option(value='') Select branch
      option(value='Maganjo') Maganjo
      option(value='Matugga') Matugga
      option(value='Kawempe') Kawempe
    span#branch.error
    label(for='total amount') total amount:
    input#total(type='text' name="totalAmount")
    span#totalError.error
    button(type='submit') Register
  p#message(style='color:orange; text-align: center; display: none;') Produce Registered Successfully!
script(src='registerproduce.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')

